# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (for Prisma - optional, if you want to use Prisma with Supabase)
DATABASE_URL=your_supabase_database_url

# OpenAI (for AI-powered mail responses)
OPENAI_API_KEY=sk-your_openai_api_key

# Ä°kas API (for order queries)
IKAS_CLIENT_ID=your_ikas_client_id
IKAS_CLIENT_SECRET=your_ikas_client_secret

# IMAP Mail Settings
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your_email@gmail.com
IMAP_PASSWORD=your_app_password

# SMTP Mail Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_SECURE=false

# API Authentication (optional - for securing API endpoints)
API_SECRET_KEY=your_random_secret_key_here

# Queue Processing Authentication (REQUIRED for /api/queue/process)
# Generate with: openssl rand -base64 32
QUEUE_SECRET=your_secure_queue_secret_here

# Environment
NODE_ENV=development
